  "_schema": {
    "_description": "Schema reference for item definitions",
    "PrefabName": "string - Unique item identifier (required)",
    "DisplayName": "string - Localization key for name (e.g. $item_myitem)",
    "Description": "string - Localization key for description",
    "Category": "string - Currency|CraftingMaterial|Consumable|Rune|Scroll|Token|Trophy|QuestItem|Misc",
    "MaxStack": "int - Maximum stack size (default: 1)",
    "Weight": "float - Weight per unit (default: 1.0)",
    "Tradeable": "bool - Can be traded (default: true)",
    "Value": "int - Trade/sell value (default: 0)",
    "Teleportable": "bool - Can go through portals (default: true)",
    "Consumable": "bool - Is consumable item (default: false)",
    "OnUseAbility": "string - Prime ability ID to trigger on consume",
    "CloneFrom": "string - Vanilla item to clone model from",
    "Flags": "array - ItemFlags: NoDrop|NoTrade|NoDestroy|QuestItem",

    "_assetBundle": {
      "Bundle": "string - AssetBundle name (e.g. 'tome_assets')",
      "BundlePrefab": "string - Prefab name in bundle (defaults to PrefabName)",
      "BundleIcon": "string - Icon sprite/texture name in bundle"
    },

    "_icons": {
      "Icon": "string - Icon source. Can be: filename.png (external), bundle:sprite (from bundle)"
    },

    "_example_with_bundle": {
      "PrefabName": "CustomToken",
      "DisplayName": "$item_customtoken",
      "Description": "$item_customtoken_desc",
      "Category": "Currency",
      "Bundle": "my_assets",
      "BundlePrefab": "CustomToken_Prefab",
      "BundleIcon": "CustomToken_Icon",
      "MaxStack": 999
    }
  }
